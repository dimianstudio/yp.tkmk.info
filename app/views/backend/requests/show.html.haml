= title("Админка &#8594; Базы данных &#8594; Организации &#8594; " + @org.name + " &#8594; Запросы")

%div.container
  = admin_menu("databases")
%div.container
  %div.content    
    %h2= @org.name
    = admin_org_menu("requests")
    - if @requests.total_entries > 0
      %p= "Организация имеет <strong>#{@requests.total_entries}</strong> #{Russian.p(@requests.total_entries, "запрос", "запроса", "запросов")}"
      %table#higlight_table
        %colgroup
          %col
          %col{:width => "70%"}
          %col{:width => "10%"}
          %col{:width => "5%"}      
          %col{:width => "10%"}
        %tbody
          = render :partial => "request", :collection => @requests
      = will_paginate(@requests, :class => "pagination round-bottom-10")
    - else
      %p Запросов пока нет