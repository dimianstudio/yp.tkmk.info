= title("Админка &#8594; Базы данных &#8594; Ассоциации")

%div.container
  = admin_menu("databases")
%div.container
  %div.content    
    %h2 Ассоциации
    - if @associations.size > 0
      %table#higlight_table
        %colgroup
          %col
          %col{:width => "52%"}
          %col{:width => "15%"}
          %col{:width => "10%"}        
          %col{:width => "10%"}
          %col{:width => "10%"}
        %tbody
          = render :partial => 'association', :collection => @associations
      = will_paginate(@associations, :class => "pagination round-bottom-10")
    - else
      %p Нет ни одной ассоциации