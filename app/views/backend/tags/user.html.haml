= title("Админка &#8594; Словари &#8594; Тэги пользователя " + user_name(@user))

%div.container
  = admin_menu("dictionaries")
%div.container
  %div.content    
    %h2= "Тэги пользователя #{user_name(@user)}"
    - if @tags.total_entries > 0
      %p= "Пользователь добавил <strong>#{@tags.total_entries}</strong> #{Russian.p(@tags.total_entries, "тэг", "тэга", "тэгов")}"
      %table#higlight_table
        %colgroup
          %col
          %col{:width => "63%"}
          %col{:width => "7%"}
          %col{:width => "5%"}        
          %col{:width => "10%"}
          %col{:width => "10%"}
        %tbody
          = render :partial => 'tag', :collection => @tags
      = will_paginate(@tags, :class => "pagination round-bottom-10")
    - else
      %p Пользователь не добавил ни одного тэга